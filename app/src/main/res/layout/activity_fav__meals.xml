<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dinner_Meals">



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="655dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="413dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:background="#207827"
                android:gravity="center_horizontal"
                android:text="Dinner Meals"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--First Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/First_meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    app:srcCompat="@drawable/sweet_potato" />

            </androidx.cardview.widget.CardView>
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginLeft="60dp"
                android:text="Favorit"
                android:textColor="#207827"
                android:textStyle="bold|italic"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Sweet potato Tex-Mex salad"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium" />
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#207827"
                android:bufferType="normal"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <!--Second Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/secons_meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/noodles" />

            </androidx.cardview.widget.CardView>
            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginLeft="60dp"
                android:text="Favorit"
                android:textColor="#207827"
                android:textStyle="bold|italic"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Ginger chicken and amp; green bean noodles"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:background="#207827"
                android:bufferType="normal"
                android:textStyle="bold|italic"/>

            <!--Third Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/Third_meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/chicken" />

            </androidx.cardview.widget.CardView>
            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginLeft="60dp"
                android:text="Favorit"
                android:textColor="#207827"
                android:textStyle="bold|italic"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Chickpea curry"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"
                />
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:background="#207827"
                android:bufferType="normal"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark" />

            <!-- Forth Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/Forth_Meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/beef"  />
            </androidx.cardview.widget.CardView>
            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="290dp"
                android:layout_marginLeft="60dp"
                android:text="Favorit"
                android:textColor="#207827"
                android:textStyle="bold|italic"
                android:textSize="18dp"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_horizontal"
                android:text="Cajun chicken and amp; chunky bean salsa"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"
                />
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:background="#207827" />

            <!-- Button Fav-->
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:clickable="true"
                android:text=" Go To Favorit"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="30dp"
                android:background="#207827" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>