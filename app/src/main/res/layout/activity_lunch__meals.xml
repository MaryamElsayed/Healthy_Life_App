<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lunch_Meals">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="655dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--First Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/First_meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    app:srcCompat="@drawable/korean_rice" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Korean-Style Beef Rice Bowl Cucumber"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium" />
            <Button
                android:id="@+id/btn1_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#207827"
                android:bufferType="normal"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <!--Second Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/Secons_Meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/vegetable" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Vegetable and Cashew Stir Fry"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"/>
            <Button
                android:id="@+id/btn2_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:background="#207827"
                android:bufferType="normal"
                android:textStyle="bold|italic"/>

            <!--Third Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/Third_meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/zucchini" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Zucchini and Beef Skillet"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"
                />
            <Button
                android:id="@+id/btn3_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:background="#207827"
                android:bufferType="normal"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark" />

            <!-- Forth Meal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/Forth_Meal"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="40dp"
                android:elevation="2dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="223dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/pork"  />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_horizontal"
                android:text="Asian Pork Noodles with Lime and Basil "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:textColor="#207827"
                android:textSize="22dp"
                android:fontFamily="sans-serif-medium"
                />
            <Button
                android:id="@+id/btn4_L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:bufferType="normal"
                android:clickable="true"
                android:text="Ingredients"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginTop="10dp"
                android:background="#207827" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>